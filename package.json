    "mongoose": "^4.12.1",
    "morgan": "~1.9.0",
    "node-sass-middleware": "^0.11.0",
    "pretty-error": "^2.1.1",
    "pug": "^2.0.1",
    "serve-favicon": "~2.4.5"
  },
